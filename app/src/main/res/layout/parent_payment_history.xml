<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"

android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
tools:context="com.MispronouncedDevelopment.Homeroom.AndroidPay">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/payment_cal_container"
    android:layout_weight="0.4"/>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:id="@+id/imageView_divider"
    android:layout_below="@+id/payment_container_caldroid"
    android:focusableInTouchMode="false"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_weight="0.1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_below="@+id/imageView_divider"
        android:background="@color/white">


        <Button
            android:id="@+id/confirm_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="Confirm"
            android:onClick="requestFullWallet"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/wallet_button_holder"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:id="@+id/wallet_button_holder"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/confirm_button"
            android:layout_marginTop="34dp" />
    </RelativeLayout>
</LinearLayout>