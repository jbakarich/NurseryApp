        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_margin="8dp"
            android:id="@+id/child1Card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ActivityCardText"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textAlignment="inherit"
                    android:layout_marginStart="11dp"
                    android:text="Johnny Roberts"
                    android:layout_below="@+id/activitiesCardTitle"
                    android:layout_alignParentStart="true" />


                <Button
                    android:text="View profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentHistoyCardButton"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_alignParentBottom="true"
                    android:layout_alignEnd="@+id/activitiesCardTitle" />

                <Button
                    android:text="Check in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastCheckInDateText"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="20sp"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

