<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Admin_Home">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:id="@+id/child1Card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:id="@+id/imageView4"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"
                    android:background="@color/white"
                    android:layout_marginTop="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="27dp" />

                <TextView
                    android:text="John S. Parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="41dp"
                    android:id="@+id/ParentNameText"
                    android:textSize="24sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView4" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:id="@+id/child1Card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="Contact Information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="22dp"
                    android:id="@+id/textView10"
                    android:textSize="18sp" />

                <TextView
                    android:text="Address: 4 Privet Drive, Las Cruces, NM, 88001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_marginTop="11dp"
                    android:id="@+id/textView11" />

                <TextView
                    android:text="email: jparent@compuserv.net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView11"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_marginTop="14dp"
                    android:id="@+id/textView12" />

                <Button
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:text="phone:(575)123-4567"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_alignTop="@+id/button"
                    android:layout_alignStart="@+id/textView12" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:id="@+id/child1Card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="Payment Information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="22dp"
                    android:id="@+id/textView15"
                    android:textSize="18sp" />

                <TextView
                    android:text="Last Paid:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView15"
                    android:layout_alignStart="@+id/textView15"
                    android:layout_marginTop="16dp"
                    android:id="@+id/textView16" />

                <TextView
                    android:text="Current Balance:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:id="@+id/textView20"
                    android:layout_below="@+id/textView17"
                    android:layout_alignStart="@+id/textView16" />

                <TextView
                    android:text="November 9, 2016"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView16" />

                <TextView
                    android:text="$0.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView21"
                    android:layout_below="@+id/textView20"
                    android:layout_alignStart="@+id/textView17"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:text="Make Payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/white" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>