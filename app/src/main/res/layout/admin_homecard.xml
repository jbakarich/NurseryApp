<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="115dp"
android:layout_margin="8dp"
android:id="@+id/child5Card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_marginEnd="35dp"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="Check In" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:padding="0dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="viewStart"
            android:text="Jon Snow"
            android:id="@+id/childName"
            android:layout_above="@+id/ProfileButton5"
            android:layout_alignStart="@+id/ProfileButton5"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/childDate"
            android:maxLines="3"
            android:padding="8dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textAlignment="inherit"
            android:text="Last check in was October 1, 2016"
            android:layout_below="@+id/childName"
            android:layout_alignParentStart="true" />

        <Button
            android:text="View profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewProfileBtn"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/CheckinBtn"
            android:layout_marginStart="21dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>