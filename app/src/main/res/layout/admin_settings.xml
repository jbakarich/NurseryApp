<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Parent_Settings"
    android:weightSum="1">




    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal">

        <TextView
            android:text="Notifications"
            android:layout_width="210dp"
            android:layout_height="74dp"
            android:id="@+id/textView1"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:id="@+id/notificationToggle" />

    </GridLayout>
    <TextView
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_weight="0.08" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/GridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal">

        <TextView
            android:text="Old Password:"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/oldPassword"
            android:hint="1234" />
        <TextView
            android:text="New Password:"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/passwordA"
            android:hint="1234" />

        <TextView
            android:text="Confirm:"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="185dp"
            android:layout_height="66dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/passwordB"
            android:hint="1234" />


    </GridLayout>

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitenewpassword" />

    <TextView
        android:text="Create Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Create_ActivityBtn"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_weight="0.22" />

    <TextView
        android:text="Activity Description:"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="372dp"
        android:layout_height="100dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/activity_description"
        android:hint="naptime!"
        android:layout_weight="0.24" />

    <TextView
        android:text="Activity Time:"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activityTime" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitnewactivity" />

</LinearLayout>
</ScrollView>